.global _start

.section .text

  mov $circle, %rax
  cmpl $1, (%rax)
  jne bad_exit

  movq $60, %rax
  movq $0, %rdi
  syscall

bad_exit:
  movq $60, %rax
  movq $1, %rdi
  syscall

.section .data
circle: .byte 0
vertices: .quad offset node1, offset node2, offset node3, 0
node1: .quad offest node2, 0
node2: .quad offest node3, 0
node3: .quad offest node1, 0
